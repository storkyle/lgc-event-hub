# ===================================
# EVENT HUB - Environment Configuration
# ===================================
#
# NOTE: Docker Compose automatically loads this .env file and substitutes
# variables in both docker-compose.yml and docker-compose.dev.yml
#
# The anchors (&db-config, &service-config) in docker-compose.yml will use
# these values, and they are automatically inherited by docker-compose.dev.yml

# Database Configuration
DB_HOST=localhost
DB_NAME=eventhub
DB_USER=eventhub
DB_PASSWORD=changeme
DB_PORT=5432
DB_MAX_CONNECTIONS=20

# Service Security
X_SERVICE_TOKEN=changeme

# API Server Configuration
PORT=3000
NODE_ENV=development

# Worker Configuration
WORKER_ID=worker-dev-1
POLL_INTERVAL_MS=100
BATCH_SIZE=20
WEBHOOK_TIMEOUT_MS=10000
STALE_TIMEOUT_SECONDS=60
CHECK_INTERVAL_MS=60000

# Development Settings
DEBUG=false
LOG_LEVEL=info
