{
  "name": "eventhub",
  "version": "1.0.0",
  "description": "Distributed Event Hub system for microservices architecture",
  "main": "dist/api/server.js",
  "scripts": {
    "build": "tsc",
    "start:api": "node dist/api/server.js",
    "start:fanout": "node dist/workers/fanout.js",
    "start:dispatcher": "node dist/workers/dispatcher.js",
    "start:cleanup": "node dist/workers/cleanup.js",
    "dev:api": "ts-node src/api/server.ts",
    "dev:fanout": "ts-node src/workers/fanout.ts",
    "dev:dispatcher": "ts-node src/workers/dispatcher.ts",
    "dev:consumer": "ts-node examples/simple-consumer.ts",
    "dev:api:watch": "nodemon --watch src --ext ts --exec ts-node src/api/server.ts",
    "dev:fanout:watch": "nodemon --watch src --ext ts --exec ts-node src/workers/fanout.ts",
    "dev:dispatcher:watch": "nodemon --watch src --ext ts --exec ts-node src/workers/dispatcher.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "event-hub",
    "microservices",
    "webhooks",
    "event-driven"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "pg": "^8.11.0",
    "prom-client": "^15.1.0",
    "undici": "^6.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.3.3",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
